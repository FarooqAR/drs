extends ../common/layout

block style_links
  link(rel='stylesheet', href='/stylesheets/doctor/signup.css')

block scripts
  script(src="/javascripts/signup.js")

block content
  //- {typeF} is same as {type} but with first letter capitalized 
  -var typeF = type.slice(0, 1).toUpperCase() + type.slice(1)
  div#signup_form_container
    h2.text_centered Sign Up as a #{typeF}
    if error
      include ../common/alert
    form(action="/signup/" + type, method="post")
      div
        input#input_fname(
          type="text" 
          class="form-control"
          name="fname" 
          value=fname
          required
          placeholder="First Name ")
      div
        input#input_lname(
          type="text" 
          class="form-control"
          name="lname" 
          value=lname
          required
          placeholder="Last Name ")
      div
        input#input_username(
        type="text" 
        class="form-control"
        name="username" 
        value=username
        required
        placeholder="Username ")   
      div
        input#input_password(
          type="password"
          class="form-control" 
          name="password" 
          required
          placeholder="Password")
      div
        input#confirm_password(
          type="password"
          class="form-control" 
          name="cpassword" 
          required
          placeholder="Confirm Password")    
      div.text_centered
        input(
          type="submit", 
          value="Sign Up"
          class="btn btn-primary")
    div.text_centered Already signed up as a #{type}? 
      a(href='/login/' + type) Login!
    div.text_centered Or
    div.text_centered Sign Up as a 
      if type == "doctor"
        a(href="/signup/user")  User
      else
        a(href="/signup/doctor")  Doctor

          