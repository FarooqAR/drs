extends ../common/layout

block style_links
  link(rel='stylesheet', href='/stylesheets/doctor/dashboard.css')


block content
    div#doc_main_container.container
        h2 Dr. #{fullName}
        hr
        include ../common/alert.pug
        form#filter_appointments_form
            div.container_flex
                select#clinics(name="clinic")
                    option(value="Select Clinic", disabled)
                input#history_btn(
                    type='submit'
                    class='btn btn-primary'
                    value='Filter' )
        div#appointments_body
            div
                h4 Current Appointments:
                div.appointments_list.appointments_new
                    for app in currentAppointments
                        a(href="/appointments/" + app.appointmentId)
                            div.row
                                div.col-sm-3 #{app.patientFullName}
                                div.col-sm-3 #{app.clinicName}
                                div.col-sm-3 #{app.date}, #{app.from} to #{app.to}
            div
                h4 New Requests:
                div.appointments_list.appointments_new
                    for app in newAppointments
                        a(href="/appointments/" + app.appointmentId)
                            div.row
                                div.col-sm-3 #{app.patientFullName}
                                div.col-sm-3 #{app.clinicName}
                                div.col-sm-3 #{app.date}, #{app.from} to #{app.to}
            