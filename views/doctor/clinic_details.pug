extends ../common/layout

block style_links
  link(rel='stylesheet', href='/stylesheets/doctor/clinic_details.css')

block content
  div#clinic_details_container
    table.table.table-bordered.table-dark
      thead
        tr
          th(colspan="2") Clinic/Hospital Details
      tbody
        tr
          td Name
          td #{clinic.name}   
        tr
          td Role
          td #{clinic.role} 
        tr
          td Location
          td 
            iframe(width="400" height="300" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=" + clinic.lat + "," + clinic.long + "&key="+ process.env.GOOGLE_MAPS_API_KEY, allowfullscreen)