extends ../common/layout

block style_links
  link(rel='stylesheet', href='/stylesheets/doctor/history.css')


block content
    div#appoint_history_container.container
        h2 Dr. #{fullName}
        hr
        include ../common/alert.pug
        form#form_search(action="/history", method="post")
            div.container_flex
                input.flex_2(
                    type="text"
                    class="form-control",
                    name="clinic_name", 
                    placeholder="Clinics/Hospitals" )
                input.flex_2(
                    type="text" 
                    class="form-control",
                    name="patient_name", 
                    placeholder="Patient Name") 
                input(
                    type='submit'
                    class='btn btn-primary'
                    value='Filter' )

            div.container_flex.items_centered
                div.input-group.mb-3.flex_2
                  div.input-group-prepend
                    span.input-group-text From
                  input#timing_time_from(
                    type="date", 
                    name="date_from"
                    class="form-control"
                    placeholder="From")  

                div.input-group.mb-3.flex_2
                  div.input-group-prepend
                    span.input-group-text To
                  input#timing_time_to(
                    type="date", 
                    name="date_to"
                    class="form-control"
                    placeholder="To") 
        div.container_flex.text_right
            div.flex_3
            select#sort_by_order.flex_1(
                type="text" 
                class="form-control"
                name="sort_by")
                - var opt = 'Ascending'
                option(value="-1", disabled) Sort By: 
                option(value=1) Ascending
                option(value=2) Descending
        div.history_list
            for appointment in appointments
                div.appointment
                    -console.log(appointment);
                    div.container_flex.my_div
                        div.flex_1 
                            strong #{appointment.userfullname}
                        div.flex_1.text_right
                            strong Date: 
                            span #{appointment.date}
                    div.container_flex.my_div
                        div.flex_1
                            strong Clinic/Hospital: 
                            span #{appointment.clinic}
                        div.flex_1.text_right
                            strong From: 
                            span #{appointment.from} 
                            strong To: 
                            span #{appointment.to}
                    div.container_flex.my_div
                        div.flex_2.text_right
                            a(href="/appointments/" + appointment.id)
                                button(class="btn btn-primary") Details 
