extends common/layout

block style_links
  link(rel='stylesheet', href='/stylesheets/login.css')

block scripts
  script(src="/javascripts/login.js")

block content
  //- {typeF} is same as {type} but with first letter capitalized 
  -var typeF = type.slice(0, 1).toUpperCase() + type.slice(1)
  div#login_form_container
    h2.text_centered Login as a #{typeF}
    if error
      include common/alert
    form(action="/login/" + type, method="post")
      div
        input#input_id(
          type="text" 
          class="form-control"
          name="id" 
          value=username
          required
          placeholder="Username")
      div
        input#input_password(
          type="password"
          class="form-control" 
          name="password" 
          required
          placeholder="Password")
      div.text_centered
        input(
          type="submit", 
          value="Login"
          class="btn btn-primary")
    div.text_centered New #{type}? 
      a(href='/signup/' + type) Signup!
    div.text_centered Or
    div.text_centered Login as a 
      if type == "user"
        a(href="/login/doctor")  Doctor
      else
        a(href="/login/user")  User  

          